{% extends 'base.html.twig' %}

{% block title %}All Messages{% endblock %}

{% block body %}
    <div class="container">
        <table id="messages" class="table table-bordered" style="table-layout: fixed; width:100%">
            <thead>
            <tr>
                <th>{{ 'Image' }}</th>
                <th>{{ 'Author' }}</th>
                <th>{{ 'Email' }}</th>
                <th>{{ 'Text' }}</th>
                <th>{{ 'Created' }}</th>
            </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <th>
                        <img src="{{ asset('images/'~ post.getPhotoName() | default('no_image.jpg')) }}" alt="image"
                             width="200" height="100">
                    </th>
                    <th style="word-wrap: break-word">{{ message.User.username}}</th>
                    <th style="word-wrap: break-word">{{ message.User.email }}</th>
                    <th style="word-wrap: break-word">{{ message.text  }}</th>
                    <th>{{ message.getUpdatedAt()|date('Y-m-d H:i:s')  }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
